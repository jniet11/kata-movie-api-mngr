{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "types": ["node"],
      "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }